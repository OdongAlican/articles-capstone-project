<div class="d-flex col-md-12 my-1 ">
  <div class="col-md-10 text-secondary">
    <h4> Articles Page </h4>
  </div>
  <div class="col-md-2">
    <%= link_to 'New Article', new_article_path, class: "btn btn-success mt" %>
  </div>
</div>
<div class= "d-flex col-md-12 row">
<% @articles.each do |article| %>
  <div class="col-md-4">
    <%= link_to article_path(article) do %>
      <div class="background-image col-md-12 position-relative d-flex" style="background-image: url('<%= rails_blob_url(article.image) %>'); height: 250px; background-position: center;">
        
        <div class="position-absolute h-25 text-white title">
          <p>
            <strong>Title:</strong>
            <%= article.title %>
          </p>
          <p>
            <strong>Text:</strong>
            <%= article.text %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>

