<p id="notice"><%= notice %></p>
<div class="d-flex class="col-md-12">
<div class="col-md-6">
  <div class="background-image col-md-12 position-relative" style="background-image: url('<%= rails_blob_url(@article.image) %>'); height: 400px; background-size: cover;">
      <div class="position-absolute h-25 text-white title">
        <p>
          <strong>
            <%= @article.title %>
          </strong>
        </p>
        <p>
          <strong>By:</strong>
          <%= @article.author.name %>
        </p>
      </div>
  </div>

  <%= render "categories" %>
  <div class="d-flex">
    <div class="posts mt-3">
      <%= render 'vote', article: @article %>
    </div>

    <div class = "d-flex col-md-2 mt-3">
      <%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-success form-control mr-2"%>
      <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger form-control mx-2"%>
      <%= link_to 'Back', articles_path, class: "btn btn-secondary form-control mr-2" %>
    </div>
  </div>
  </div>
  <div class="col-md-6 border text-secondary py-2 px-3">
    <%= @article.text %>
  </div>
</div>
