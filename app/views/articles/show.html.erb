<p id="notice"><%= notice %></p>

<div class="card background-image col-md-5 position-relative" style="background-image: url('<%= rails_blob_url(@article.image) %>'); height: 400px; background-position: center;">
  
    <div class="position-absolute h-25 text-white title">
      <p>
        <strong>Title:</strong>
        <%= @article.title %>
      </p>
      <p>
        <strong>Text:</strong>
        <%= @article.text %>
      </p>
    </div>
</div>

<%= render "categories" %>

<div class="posts mt-3">
  <%= render 'vote', article: @article %>
</div>

<div class = "d-flex col-md-2 mt-3">
  <%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-success form-control mr-2"%>
  <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger form-control mx-2"%>
  <%= link_to 'Back', articles_path, class: "btn btn-secondary form-control mr-2" %>
</div>
