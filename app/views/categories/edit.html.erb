<div class="container mt-2">
    <h3 class="text-secondary">Editing Category</h3>

    <% if logged_in? && current_user.id == @category.user_id %>
        <%= render 'form', category: @category %>
    <% else %>
        <h3 class = "text-secondary mt-3 mb-3"> 
            Hey <%= current_user.name %> You can only Edit the Articles You created !!!
        </h3>    
    <% end %>

    <%= link_to 'Show', @category, class: "btn btn-info mt-2" %> 
    <%= link_to 'Back', categories_path, class: "btn btn-secondary mt-2" %>
</div>
